<Window x:Class="SimpleDbUpdater.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDbUpdater"
        mc:Ignorable="d"
        Title="Обновление БД Салавата" SizeToContent="WidthAndHeight" DataContext="ViewModelBase">
    <StackPanel>
        <Grid>
            <Label Content="Путь папки со скриптами:" Margin="10, 10, 10, 0"/>
            <Button Name="btnPath" Content="Выбрать" Width="70" HorizontalAlignment="Right" Margin="10, 10, 10, 5" Click="BtnPath_Click"/>
        </Grid>
        <TextBox Name="tbxScriptsFolder" Width="400" Margin="10, 0, 10, 10"/>
        <Label Content="Строка подключения:" Margin="10, 0, 10, 0"/>
        <TextBox Name="tbxConnectionString" Width="400" Margin="10, 0, 10, 10"/>
        <Button Name="btnStart" Content="Пуск" FontWeight="Bold" Width="50" HorizontalAlignment="Right" Margin="10, 0, 10, 5" Click="BtnStart_Click"/>
    </StackPanel>
</Window>
